{
  "name": "ContractLand",
  "version": "1.0.0",
  "description": "",
  "main": "truffle.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build-local": "npm run clear-abi && truffle migrate --reset --network development && npm run copy-abi",
    "build-rinkeby": "npm run clear-abi && truffle migrate --reset --network rinkeby && npm run copy-abi",
    "build-ropsten": "npm run clear-abi && truffle migrate --reset --network ropsten && npm run copy-abi",
    "build-terra": "npm run clear-abi && truffle migrate --reset --network terra && npm run copy-abi",
    "clear-abi": "rm -rf build",
    "copy-abi": "cp -R build/contracts ../contractland-app/",
    "flatten": "cd scripts && bash flatten.sh",
    "test": "truffle test --network development",
    "ganache": "ganache-cli --allowUnlimitedContractSize --gasLimit 10000000"
  },
  "author": "ContractLand Fundation",
  "license": "MIT",
  "devDependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-2": "^6.18.0",
    "babel-preset-stage-3": "^6.17.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^2.0.2",
    "truffle": "^4.1.13",
    "truffle-contract": "^3.0.4",
    "truffle-flattener": "^1.2.3",
    "ganache-cli": "^6.1.5"
  },
  "dependencies": {
    "ethereumjs-wallet": "0.6.0",
    "ethereumjs-abi": "^0.6.5",
    "ethereumjs-util": "^5.1.4",
    "truffle-hdwallet-provider": "0.0.3",
    "zeppelin-solidity": "1.10.0",
    "zos-lib": "^1.0.0"
  }
}
